<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- 下载进度 -->

    <style name="NumberProgressBar_Default">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="progress_max">100</item>
        <item name="progress_current">0</item>
        <item name="progress_unreached_color">#CCCCCC</item>
        <item name="progress_reached_color">#3498DB</item>
        <item name="progress_text_size">10sp</item>
        <item name="progress_text_color">#3498DB</item>
        <item name="progress_reached_bar_height">1.5dp</item>
        <item name="progress_unreached_bar_height">0.75dp</item>
    </style>

    <style name="BaseTextViewStyle" parent="@android:style/Widget.TextView" />

    <style name="BaseButtonStyle" parent="@android:style/Widget.Button" />

    <style name="BaseEditTextStyle" parent="@android:style/Widget.EditText" />

    <style name="BaseCheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox" />

    <style name="BaseRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton" />

    <style name="BaseToggleButtonStyle" parent="@android:style/Widget.Button.Toggle" />

    <style name="BaseAutoCompleteTextViewStyle" parent="@android:style/Widget.AutoCompleteTextView" />

    <style name="BaseAppTheme" parent="@android:style/android:Theme.Holo.Light.NoActionBar" />

    <style name="AppTheme" parent="@style/BaseAppTheme">

        <item name="android:buttonStyle">@style/BaseButtonStyle</item>
        <item name="android:buttonStyleToggle">@style/BaseToggleButtonStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:autoCompleteTextViewStyle">@style/BaseAutoCompleteTextViewStyle</item>
        <item name="android:editTextStyle">@style/BaseEditTextStyle</item>
        <item name="android:listViewStyle">@style/BaseListViewStyle</item>
        <item name="android:radioButtonStyle">@style/BaseRadioButtonStyle</item>
        <item name="android:textViewStyle">@style/BaseTextViewStyle</item>
        <item name="android:windowAnimationStyle">@style/ECAnimation.Activity</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0.0dip</item>
    </style>
    <style name="ECAnimation.Activity" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/common_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/common_slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/common_slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/common_slide_right_out</item>
    </style>
    <style name="BaseListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:divider">@color/list_divider</item>
        <item name="android:dividerHeight">@dimen/list_divider_height</item>
    </style>

    <style name="CCPFontPreferenceLarge">
        <item name="android:textAppearance">@style/CCPPreferenceTextLarge</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CCPPreferenceTextLarge">
        <item name="android:textSize">@dimen/NormalTextSize</item>
        <item name="android:textColor">@color/ccp_pref_title</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CCPPreferenceTextSmall">
        <item name="android:textSize">@dimen/SmallTextSize</item>
        <item name="android:textColor">@color/ccp_pref_summary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CCPFontPreferenceSmall">
        <item name="android:textAppearance">@style/CCPPreferenceTextSmall</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#a0ffffff</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="CCPFontPreferenceSummary" parent="@style/CCPFontPreferenceSmall">
        <item name="android:textAppearance">@style/CCPPreferenceTextSmall</item>
        <item name="android:textSize">@dimen/SmallTextSize</item>
    </style>

    <style name="CCPGroup_profile" parent="@style/CCPFontPreferenceSummary">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:paddingBottom">@dimen/SmallPadding</item>
        <item name="android:paddingRight">@dimen/SmallPadding</item>
        <item name="android:paddingTop">@dimen/SmallPadding</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CCPListView">
        <item name="android:scrollbars">vertical</item>
        <item name="android:listSelector">@drawable/comm_list_item_selector</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0.0px</item>
    </style>


    <style name="CCPAnimation.Activity.Holo" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/pop_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_not_change</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_not_change</item>
        <item name="android:activityCloseExitAnimation">@anim/pop_out</item>
    </style>

    <style name="CCPSmallButton">
        <item name="android:textSize">@dimen/HintTextSize</item>
        <item name="android:textColor">@color/white_color_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/SmallPadding</item>
        <item name="android:paddingRight">@dimen/SmallPadding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/SmallButtonWidth</item>
        <item name="android:minHeight">@dimen/SmallButtonHeight</item>
    </style>

    <style name="CCPFontEmptyMsgLarge" parent="@style/CCPFontPreferenceLarge">
        <item name="android:textColor">@color/ccp_pref_summary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="ActionSheetAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>
    
    <style name="Theme.Light.FullScreenDialogAct" parent="@style/BaseDialog">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>
    <style name="BaseDialog" parent="@android:style/Theme.Dialog" />
    
    <style name="DialogTitle" parent="@style/ShadowedText">
        <item name="android:textColor">@color/main_bg</item>
    </style>
    <style name="ShadowedText">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
     <style name="Style_Scrollable">
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:overScrollMode">never</item>
    </style>
    <style name="DialogButton">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/btn_dialog</item>
        <item name="android:minHeight">45.0dip</item>
    </style>
    <style name="DialogButton.Left" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_left</item>
    </style>
    <style name="DialogButton.Right" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_right</item>
    </style>
    <style name="DialogButton.Center" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_center</item>
    </style>
    <style name="Theme_Light_CustomDialog_Blue" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/bg_common_toast</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>
    
    <!-- 绿色按钮样式 -->
    <style name="ButtonGreen" parent="@style/Button1">
        <item name="android:background">@drawable/bg_button_green</item>
    </style>

    <!-- 蓝色按钮样式 -->
    <style name="ButtonBlue" parent="@style/Button1">
        <item name="android:background">@drawable/bg_button_blue</item>
    </style>
    
    <!-- 红色按钮样式 -->
    <style name="ButtonRed" parent="@style/Button">
        <item name="android:background">@drawable/bg_button_red</item>
    </style>
    
    <!--会员注册激活按钮 -->
    <style name="ButtonActive" parent="@style/ButtonLong">
        <item name="android:background">@drawable/bg_button_active</item>
        <item name="android:textColor">@color/btn_active_text_color</item>
    </style>
    
    <!--全宽蓝色按钮样式 -->
    <style name="ButtonFullBlue" parent="@style/ButtonLong">
        <item name="android:background">@drawable/bg_button_full_blue</item>
        <item name="android:textColor">@color/btn_full_blue_text_color</item>
    </style>
    
    <!--短蓝色按钮样式 -->
    <style name="ButtonFullShot" parent="@style/ButtonShot">
        <item name="android:background">@drawable/bg_button_shot_blue</item>
        <item name="android:textColor">@color/btn_shot_blue_text_color</item>
    </style>
    
    <!--选择规格按钮样式 -->
    <style name="ButtonChoseSize" parent="@style/Button">
        <item name="android:background">@drawable/bg_button_select_size</item>
        <item name="android:textColor">@color/btn_select_size_text_color</item>
    </style>
    
    <!-- 普通按钮样式 -->
    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">12dip</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/NormalTextSize</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>
    
    <style name="Button1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/NormalTextSize</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>
    
    <style name="ButtonShot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/NormalTextSize</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>
    
    <!-- 加长按钮样式 -->
    <style name="ButtonLong">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:textSize">@dimen/NormalTextSize</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>
    
     <!-- dialog样式 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">

        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    
    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!-- 通用浮动框弹出动画 -->
    <style name="dialogAnim">
        <item name="android:windowEnterAnimation">@anim/scale_enter</item>
        <item name="android:windowExitAnimation">@anim/scale_exit</item>
    </style>
     <!-- wheel控件浮动框弹出动画:从底部弹出 -->
    <style name="dialogAnim.Wheel">
        <item name="android:windowEnterAnimation">@anim/push_down_enter</item>
        <item name="android:windowExitAnimation">@anim/push_down_exit</item>
    </style>

    <style name="NavPage">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/navpage</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="CCPList">
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:divider">@color/list_devider_color</item>
        <item name="android:dividerHeight">0.0px</item>
    </style>

    <style name="CCPCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/ccp_checkbox_btn</item>
        <item name="android:button">@null</item>
