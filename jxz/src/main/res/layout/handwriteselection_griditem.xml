<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:ignore="HardcodedText,DisableBaselineAlignment" >
    <com.facebook.drawee.view.SimpleDraweeView
        fresco:placeholderImage="@color/light_gray"
        android:id="@+id/handWritesimpleImage"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        fresco:viewAspectRatio="0.94"
        />
    <CheckBox
        android:id="@+id/handWriteCheckBox"
        android:background="@drawable/btn_checkbox_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/handWritesimpleImage"
        android:layout_alignEnd="@+id/handWritesimpleImage" />

    <TextView
        android:id="@+id/handwritename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="名字"
        android:gravity="center"
        android:background="@null"
        android:textSize="14sp"
        android:textColor="@color/dark_gray"
        android:layout_alignBottom="@+id/handWritesimpleImage"
        android:layout_alignRight="@+id/handWritesimpleImage"
        android:layout_alignEnd="@+id/handWritesimpleImage" />
</RelativeLayout>