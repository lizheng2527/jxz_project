<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:ignore="HardcodedText,DisableBaselineAlignment" >
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/title_color"
            >
            <TextView
                android:id="@+id/search_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:text="课堂搜索"/>
            <ImageView
                android:id="@+id/search_treads_back"
                style="?android:attr/buttonStyleSmall"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:scaleType="fitXY"
                android:background="@drawable/topbar_back_bt"
                android:layout_height="50dp" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="invisible"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/search_treads_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:background="@drawable/button_normal_shape_radius"
                android:textCursorDrawable="@null"
                android:textColor="@color/gray"
                android:ems="10"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:textSize="15sp"
                android:hint="姓名、文件名"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/search_image"/>
        </RelativeLayout>


        <TextView
            android:visibility="gone"
            android:id="@+id/datelin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            android:background="#555555"/>
        <LinearLayout
            android:gravity="bottom"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/searchHandWriteDateWeek"
                android:layout_marginLeft="30dp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:text="时间:"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:gravity="center|left|bottom"
                />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Spinner
                    android:singleLine="true"
                    android:clickable="true"
                    android:id="@+id/search_handwrite_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_white_selector"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="25dp"
                android:layout_width="15dp"
                android:layout_marginRight="50dp"
                android:layout_height="15dp"
                android:src="@drawable/spinner_icon"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="50dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:id="@+id/eclassLinear"
            android:gravity="bottom"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/searchHandWriteTV"
                android:layout_marginLeft="30dp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:text="班级:"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:gravity="center|left|bottom"
                />
            <!--<TextView-->
                <!--android:singleLine="true"-->
                <!--android:clickable="true"-->
                <!--android:id="@+id/search_treads_tree"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="16sp"-->
                <!--android:textColor="@color/gray"-->
                <!--android:text="请选择教材范围"-->
                <!--android:gravity="center_vertical"-->
                <!--android:padding="5dp"-->
                <!--android:background="@drawable/bg_button_white_selector"-->
                <!--/>-->
            <!--<ImageView-->
                <!--android:layout_marginBottom="5dp"-->
                <!--android:layout_marginTop="25dp"-->
                <!--android:layout_width="15dp"-->
                <!--android:layout_marginRight="50dp"-->
                <!--android:layout_height="15dp"-->
                <!--android:src="@drawable/more"/>-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Spinner
                    android:singleLine="true"
                    android:clickable="true"
                    android:id="@+id/search_handwrite_spinner_eclass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_white_selector"
                    />
            </RelativeLayout>

            <ImageView

                android:layout_marginBottom="5dp"
                android:layout_marginTop="25dp"
                android:layout_width="15dp"
                android:layout_marginRight="50dp"
                android:layout_height="15dp"
                android:src="@drawable/spinner_icon"/>
        </LinearLayout>
        <TextView
            android:id="@+id/centerLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="50dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/booksLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="教材:"
                android:paddingBottom="5dp"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:gravity="center|left|bottom"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Spinner
                    android:singleLine="true"
                    android:clickable="true"
                    android:id="@+id/search_handwrite_spinner_books"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_white_selector"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="25dp"
                android:layout_width="15dp"
                android:layout_marginRight="50dp"
                android:layout_height="15dp"
                android:src="@drawable/spinner_icon"/>
        </LinearLayout>
        <TextView
            android:id="@+id/belowLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="50dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/eclass"
                android:layout_marginLeft="30dp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="班级:"
                android:textColor="#222222"
                android:textSize="16sp"
                android:gravity="center|left|bottom"
                />
            <TextView
                android:clickable="true"
                android:id="@+id/eclasstree"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="#555555"
                android:text="全部"
                android:gravity="center|bottom"
                />
            <ImageView
                android:layout_marginTop="25dp"
                android:layout_width="15dp"
                android:layout_marginRight="50dp"
                android:layout_height="15dp"
                android:src="@drawable/more"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/search_handwrite_commitBtn"
        android:layout_alignParentBottom="true"
        android:text="搜    索"
        android:textSize="18sp"
        android:background="@drawable/bg_button_radius_selector_searchwork"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_height="50dp" />

</RelativeLayout>