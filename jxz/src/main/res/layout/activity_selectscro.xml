<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:ignore="HardcodedText,DisableBaselineAlignment" >
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/title_color"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:text="积分搜索"/>
            <ImageView
                android:id="@+id/activity_selectscro_goback"
                style="?android:attr/buttonStyleSmall"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:scaleType="fitXY"
                android:background="@drawable/topbar_back_bt"
                android:layout_height="50dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="日期:"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:gravity="center|left|bottom"
                />
            <TextView
                android:paddingTop="10dp"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:onClick="onClick"
                android:id="@+id/activity_selectscro_date_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年12月"
                android:textColor="@color/name_blue"
                android:textSize="16sp"
                android:gravity="center|bottom"
                android:background="@drawable/bg_button_white_selector"
                />
            <ImageView
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_expand_more_black_12dp"/>
            <TextView
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="至"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:gravity="center|bottom"
                />
            <TextView

                android:paddingTop="10dp"
                android:clickable="true"
                android:onClick="onClick"
                android:id="@+id/activity_selectscro_date_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年12月"
                android:textColor="@color/name_blue"
                android:textSize="16sp"
                android:gravity="center|bottom"
                android:background="@drawable/bg_button_white_selector"
                />
            <ImageView
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_expand_more_black_12dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="50dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:id="@+id/studentselecttree"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="班级:"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:gravity="center|left|bottom"
                />
            <TextView
                android:paddingTop="10dp"
                android:clickable="true"
                android:onClick="onClick"
                android:id="@+id/activity_selectscro_tree"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#555555"
                android:text="全部"
                android:gravity="center|bottom"
                android:background="@drawable/bg_button_white_selector"
                />
            <ImageView
                android:layout_marginTop="25dp"
                android:layout_width="15dp"
                android:layout_marginRight="50dp"
                android:layout_height="15dp"
                android:src="@drawable/more"/>
        </LinearLayout>
        <TextView
            android:id="@+id/studentLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="50dp"
            android:background="@color/gray"/>

        <Button
            android:onClick="onClick"
            android:id="@+id/activity_selectscro_but"
            android:layout_marginTop="80dp"
            android:textColor="@color/white"
            android:text="搜  索"
            android:textSize="18sp"
            android:background="@drawable/bg_button_radius_selector"
            android:layout_width="250dp"
            android:padding="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>